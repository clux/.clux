FROM clux/dotclux

ADD tasks/sublime tasks/
RUN ./tasks/sublime

ADD tasks/node tasks/
RUN ./tasks/node

ADD tasks/dotfiles tasks/
ADD tasks/clone tasks/

ENV GH https://github.com/
RUN ./tasks/dotfiles
RUN ./tasks/clone

ADD tasks/npm tasks/
RUN /bin/bash -c 'source $HOME/.path && ./tasks/npm'

ADD tasks/pip tasks/
RUN ./tasks/pip

# Verify
ENV TRAVIS 1
ADD test test
RUN bash -c 'source ~/.path && bats test'
