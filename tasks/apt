#!/usr/bin/env bash

apt-get update
apt-get upgrade

sudo apt-get install libxss1 libappindicator1 libindicator7
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
sudo dpkg -i google-chrome*.deb
sudo apt-get install -f

apps=(
  #cheese      # camera tester
  #clementine  # music player
  cmake     # c++ build tool
  #couchdb     # json database
  cppcheck  # c++ linter
  curl      # wget alternative
  g++
  git
  grc       # generic colouriser
  guake
  handbrake # encoding/transcoding utility
  lcov      # c++ coverage
  pass      # password store
  pidgin    # XMPP
  mumble    # MP voice com
  nmap      # port scanner
  redshift  # monitor night brightener
  screen    # screen manager
  shellcheck # bash script linter
  steam     # games
  vlc       # video player
  xclip     # clipboard helper
  xsel      # clipboard helper
)

for i in ${apps[@]}
do
  echo $i
  apt-get install -y -qq $i
done

if [ -z "$TRAVIS" ]; then
  echo fs.inotify.max_user_watches=524288 | sudo tee -a /etc/sysctl.conf
  sudo sysctl -p
fi
