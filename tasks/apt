#!/bin/sh
set -e

wget -qO- https://dl.google.com/linux/linux_signing_key.pub | apt-key add -
echo "deb http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list
apt-get update
apt-get install -y -qq google-chrome-stable guake # get these early

# development dependencies
apt-get install -y \
  autoconf \
  build-essential \
  cmake \
  libssl-dev \
  libncursesw5-dev \
  libncurses5-dev \
  libcurl4-gnutls-dev \
  libedit-dev \
  libreadline-dev \
  libotr5-dev \
  libtool \
  libexpat1-dev \
  libglib2.0-dev \
  libnotify-dev \
  libxml2-dev \
  pkg-config \
  python-dev \
  python-pip \
  swig \
  uuid-dev

# get everything else in one line
apt-get install -y -qq \
  ccze \
  cowsay \
  curl \
  git \
  handbrake \
  htop \
  iftop \
  keychain \
  lcov \
  lolcat \
  pass \
  php5-cli \
  php5-curl \
  python-keyring \
  sshfs \
  mumble \
  nmap \
  redshift \
  shellcheck \
  vlc \
  vim-gnome \
  xclip

# remove output of dpkg -l | grep zeitgeist
apt-get purge libzeitgeist-* zeitgeist
apt-get autoremove
