#!/bin/bash
set -e

# accept defaults libx264 over libx264-10bit
pacs=(
  bash-completion
  ccze
  cmake
  cowsay
  feh
  git
  gimp
  gthumb
  htop
  imagemagick
  lolcat
  lsb-release
  mpc
  mpd
  mumble
  ncmpcpp
  ntfs-3g
  nmap
  openssh
  profanity
  redshift
  rsync
  rxvt-unicode
  pass
  tmux
  vlc
  weechat
  xclip
  xorg-xrandr
  xorg-xrdb
  xterm
)

for p in "${pacs[@]}"; do
  pacman -S "$p"
done

# haskell
pacman -S ghc cabal-install shellcheck

# llvm
pacman -S clang clang-analyzer clang-tools-extra lldb

# python
pacman -S python-pip

# ssh stuff
pacman -S keychain x11-ssh-askpass

# misc others
pacman -S nemo-fileroller ttf-ubuntu-font-family

# samba
pacman -S samba nemo-share

# steam
pacman -S steam lib32-alsa-plugins lib32-nvidia-libgl

# video editing
pacman -S openshot
